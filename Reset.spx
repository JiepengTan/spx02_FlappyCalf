onStart => {
    setXYpos 0, -100
    hide

}

onMsg "game over", => {
    wait 0.5
    gotoFront
    show
    for{
        if touching(Mouse) {
            setYpos -90
        } else {
            setYpos -95
        }
        wait 0.1
    }
}

onMsg "start", => {
    hide
}

onClick => {
    hide
    stop AllOtherScripts
    reset
    broadcast "start"
}
