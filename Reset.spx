onStart => {
    setXYpos 0, -100
    hide

}

onMsg "game over", => {
    wait 0.5
    gotoFront
    show
    for{
        if gameReset == false {
            break
        }
        if touching(Mouse) {
            setYpos -90
        }else{
            setYpos -95
        }
        wait 0.1
    }


}
onMsg "start", => {
    hide
}
onClick =>{
    hide
    reset()
    gameReset = true
    broadcast "reset_timestart"
}

onMsg "reset_timeend", =>{
    reset()
    broadcast "menu"
}